<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
    <h2>Category List</h2>
    <table class="table table-hover border">
        <thead style="background: #8a8cd8;">
            <tr class="table-header">
                <th style="width: 15%;">#</th>
                <th style="width: 65%;">Category Name</th>
                <th style="width: 20%;">Action</th>
            </tr>
        </thead>
        <tbody class="table-hover">
            <% categories.map((item, index)=>{ %>
            <tr>
                <th><%= index+1 %></th>
                <td><%= item.name %></td>
                <td>
                    <a href="/category/edit/<%= item._id %>" class="btn btn-warning btn-sm button-size"><i class="fas fa-pencil-alt"></i></a>
                    <button type="button" class="btn btn-danger btn-sm button-size" data-toggle="modal" data-target="#myModal<%= item._id %>"><i class="fas fa-trash-alt"></i></button>
                    <a href="/password/<%= item.name %>" class="btn btn-info btn-sm button-size"><i class="fas fa-angle-double-right"></i></a>
                </td>
            </tr>
            <!-- Modal -->
            <div class="modal fade" id="myModal<%= item._id %>" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-body">
                            <h4>Are you sure ?</h4>
                        </div>
                        <div class="modal-footer">
                            <form action="/category/<%= item._id %>" method="POST" class="button-align">
                                <button class="btn btn-danger btn-sm">Yes</button>
                            </form>
                            <button type="button" class="btn btn-success btn-sm" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>